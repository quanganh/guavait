source 'https://rubygems.org'

gem 'rails', '4.0.0'
gem 'mysql2'
gem 'haml-rails'
gem 'simple_form', '>= 3.0.0.rc'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'jquery-rails'
  gem 'bootstrap-sass'
  gem 'uglifier'
end

group :development do
  gem 'debugger'
  gem 'html2haml'
  gem 'quiet_assets'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end